extends layout 

block content
    h3 #{title}: #{aantalMatches}
    ul(class="match-article-container")
        h4 #{empty}
        each user, i in users
            article(class="match-article") 
                li
                    h2: a(href=`/users/${user._id}`) #{user.firstName} #{user.lastName}
                    ul
                        li: div(class="code"): code #{user.code}
                        li(class="code-taal")
                            p(class="interesses-section") Interesses:
                            ul 
                                each codeInterest, i in user.codeInterests
                                    li
                                        article
                                            div 
                                                p #{codeInterest}
                            div(class="meerLezen-container")
                                button Meer lezen
                    div(class="button-container")
                        form(action=`/${user.id}` method="POST") 
                            button(name="dislike" value="false" class="negeer") Negeer
                            button(name="like" value="true" class="accepteer") Accepteer